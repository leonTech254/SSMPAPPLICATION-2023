<Converstations>:
    adaptive_height:True
    orientation:"vertical"
    MDCard:
        size_hint:None,None
        size:root.width/1.5,(msg.height+time.height)
        md_bg_color:"purple" if root.sender == 'me' else "green"
        pos_hint:{'right': 1} if root.sender == 'me' else {'left': 1}
        
        orientation:"vertical"
        on_press:app.Fingerprint(root.originalmsg,root.checksum,root.flag)
        MDLabel:
            id:msg
            text:root.msg
            color:"white" if root.flag=='checked' else "red"
            adaptive_height:True
            valign:"top"
        MDLabel:
            id:time
            text:root.time
            adaptive_height:True
            halign:"right"
            bold:True

<Item>:
    IconLeftWidget:
        id:root.source
        icon:root.source

