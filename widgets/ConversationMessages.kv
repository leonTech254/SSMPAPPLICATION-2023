<Converstations>:
    adaptive_height:True
    orientation:"vertical"
    MDCard:
        size_hint:None,None
        size:root.width/1.5,(msg.height+time.height)
        md_bg_color:"red"
        pos_hint:{'right': 1} if root.sender == 'me' else {'left': 1}
        orientation:"vertical"
        MDLabel:
            id:msg
            text:root.msg
            adaptive_height:True
            valign:"top"
        MDLabel:
            id:time
            text:root.time
            adaptive_height:True
            halign:"right"
            bold:True
