<SsmpUsers>:
    orientation:"vertical"
    adaptive_height:True
    MDCard:
        adaptive_height:True
        height:80
        spacing:"20dp"
        MDBoxLayout:
            spacing:"10dp"
            MDCard:
                size_hint:None,None
                size:60,60
                radius:"50dp"
                md_bg_color:1,1,0,.7
                pos_hint:{"center_y":.5,"center_x":.5}
                elevation:0
                id:icon
                FitImage:
                    id:imageProfile
                    source:"Screenshot_20220721_163833.png"
                    radius:[60,]
            MDBoxLayout:
                orientation:"vertical"
                adaptive_height:True
                pos_hint:{'center_y':.5}
                MDLabel:
                    id:name
                    text: root.name
                    bold:True
                    adaptive_height:True
                MDLabel:
                    text: f"[i]{root.phone}[/i]"
                    adaptive_height:True
                    markup:True

                Widget:


        MDBoxLayout:
            width:root.width
            orientation:"vertical"
            padding:"10dp"
            Widget:
            MDIconButton:
                icon:"account-plus"
                pos_hint:{'right':1,'middle':1}
                
                font_size: "50dp"
                md_icon_color: "green"
                on_press:app.callConverstionScreen(root.name,root.code,"no")

            Widget:

                


            

    





                
