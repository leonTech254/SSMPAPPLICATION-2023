<ConversationScreen>
    MDBoxLayout:
        orientation:"vertical"
        MDCard:
            id:mynav
            orientation:"horizontal"
            elevation:1
            size_hint:None,None
            size:root.width,120
            md_bg_color:app.theme_cls.primary_color
            elevation:10
            MDBoxLayout:
                spacing:dp(10)
                MDCard:
                    size_hint:None,None
                    size:90,90
                    radius:[45,]
                    elevation:0
                    pos_hint:{"center_y":.5}
                    FitImage:
                        radius:[45,]
                        source:"Screenshot_20220721_163833.png"
                MDBoxLayout:
                    adaptive_height:True
                    adaptive_width:True
                    pos_hint:{"center_y":.6}
                    MDBoxLayout:
                        orientation:"vertical"
                        adaptive_height:True
                        MDLabel:
                            id:username
                            text:" "
                            halign:"left"
                            adaptive_height:True
                            bold:True
                        MDLabel:
                            text:"online"
                            halighn:"center"
                            adaptive_height:True
            MDBoxLayout:
                adaptive_size:True
                pos_hint:{"center_x":1,"center_y":.5}
                MDIconButton:
                    icon:"video"
                MDIconButton:
                    icon:"phone"


            

        MDBoxLayout:
            adaptive_height:True
            height:"100dp"
            md_bg_color:app.theme_cls.primary_color
            MDCard:
                md_bg_color:app.theme_cls.primary_color
                adaptive_height:True
                radius:[20,20,0,0]
                padding:"10px"
                MDBoxLayout:
                    adaptive_height:True
                    orientation:"vertical"
                    MDLabel:
                        text:"Integrity Check"
                        adaptive_height:True
                        halign:"center"
                    MDIcon:
                        id:IntegrityCheckLight
                        icon:"heart"
                        # color:'green'
                        pos_hint: {'center_x': 0.5,'center_y': 0.5}
                        font_size: "40dp"
                Widget:

                MDBoxLayout:
                    adaptive_height:True
                    orientation:"vertical"
                    MDLabel:
                        text:"Unlock messages"
                        adaptive_height:True
                        halign:"center"
                    MDIconButton:
                        icon:"key-chain-variant"
                        pos_hint: {'center_x': 0.5,'center_y': 0.5}
                        on_press:app.UnlockAllMessages()
        ScrollView:
            MDBoxLayout:
                adaptive_height:True
                orientation:"vertical"
                spacing:"8dp"
                id:loadConverstation
        MDBoxLayout:
            adaptive_height:True
            spacing:"10dp"
            MDTextField:
                id:message
                hint_text:"write message"
                multiline:True
                mode:"fill"
            MDRaisedButton:
                text:"SEND"
                on_press:app.SendMessage(msg=message.text)

                

    

            

        
    
