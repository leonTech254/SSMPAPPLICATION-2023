<ChatScreen>
    MDBoxLayout:
        orientation:"vertical"
        MDTopAppBar:
            title: 'SSMPAPP'
            pos_hint: {"top": 1}
            elevation: 4
            use_overflow: True
            right_action_items:
                [
                ["home", lambda x: app.callback(x), "Home", "Home"],
                ["airplane", lambda x: app.callback(x), "airplane", "airplane"],
                ["alert-circle", lambda x: app.callback(x), "alert-circle", "alert-circle"],
                ]
        MDTabs:
            ChatTab:
                id:chatTab
                icon:"message-text"
                title:"Chats"
            Status:

                icon:"timer"
                title:"status"
            FindFrinds:
                id:allusersTab
                icon:"account-plus"
                title:"Find Friends"
        
<ChatTab>:
    ScrollView:
        do_scroll_y: True
        bar_width: 0
        MDBoxLayout:
            orientation: 'vertical'
            md_bg_color: app.theme_cls.bg_normal
            size_hint_y: None
            adaptive_height: True
            radius: [20, 20, 0, 0]
            padding: [0, 0, 0, 10]
            MDList:
                spacing:"8dp"
                id: chatlist
    MDBoxLayout:
        NavBar:
            one:[1,1,1,1]
            

<FindFrinds>:
    ScrollView:
        do_scroll_y: True
        bar_width: 0
        MDBoxLayout:
            orientation: 'vertical'
            md_bg_color: app.theme_cls.bg_normal
            size_hint_y: None
            adaptive_height: True
            radius: [20, 20, 0, 0]
            padding: [0, 0, 0, 10]
            MDList:
                spacing:"8dp"
                id: ssmpUsers
    MDBoxLayout:
        NavBar:
            one:[1,1,1,1]
