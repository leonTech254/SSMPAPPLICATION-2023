            height:"50dp"
            MDCard:
                size_hint:None,None
                size:(root.width)-dp(50),(root.height)/2.5
                pos_hint:{"center_y":.5,"center_x":.5}
                orientation:"vertical"
                spacing:"1dp"
                radius:[15,]
                padding:"15dp"
                Widget:
                MDLabel:
                    text:"WE SENT YOU CODE TO YOUR NUMBER"
                    bold:True
                    halign:"center"
